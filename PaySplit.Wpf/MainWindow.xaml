<Window x:Class="PaySplit.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="DatabaseManagerWindow" Content="Database Manager" Click="DatabaseManagerWindow_Click"></Button>
        <Button x:Name="PersonsWindow" Content="View persons" Click="PersonsWindow_Click"></Button>
        <Button x:Name="AddPersonWindow" Content="Add person" Click="AddPersonWindow_Click"></Button>
        <Button x:Name="SplitPayWindow" Content="Split payment" Click="SplitPayWindow_Click"></Button>
    </StackPanel>
</Window>