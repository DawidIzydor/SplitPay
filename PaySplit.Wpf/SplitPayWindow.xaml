<Window x:Class="PaySplit.Wpf.SplitPayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SplitPayWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Amount" Margin="0 1 0 1"></Label>
        <TextBox x:Name="MoneyTextBox" Margin="0 1 0 1"></TextBox>
        <Button Margin="0 1 0 1" x:Name="CalculateButton" Content="Calculate" Click="CalculateButton_Click"></Button>
        <DataGrid x:Name="ResultsDataGrid"></DataGrid>
    </StackPanel>
</Window>